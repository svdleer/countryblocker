[Unit]
Description=IPdeny Firewall Rules Updater
Documentation=https://github.com/svdleer/countryblocker
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/ipdeny-firewall-update
User=root
StandardOutput=journal
StandardError=journal

# Security hardening
PrivateTmp=yes
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
ReadWritePaths=/var/log

# Restart policy
Restart=on-failure
RestartSec=5m

[Install]
WantedBy=multi-user.target
